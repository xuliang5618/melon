
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
			http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
			http://www.springframework.org/schema/context
			http://www.springframework.org/schema/context/spring-context-4.1.xsd">

    <!-- 获取spring容器 -->
    <bean id="springHelper" class="sdu.gaming.melon.common.SpringHelper"/>
    <!-- 组件扫描 -->
    <context:component-scan base-package="sdu.gaming.melon" use-default-filters="false">
        <context:include-filter type="annotation" expression="org.springframework.stereotype.Repository"/>
        <context:include-filter type="annotation" expression="org.springframework.stereotype.Service"/>
        <context:include-filter type="annotation" expression="org.springframework.stereotype.Component"/>
    </context:component-scan>
    <!--引入配置属性文件根据不同环境自行修改 -->
    <context:property-placeholder location="classpath:config/config.properties"/>

    <!--<import resource="spring-mongo.xml"/>-->
    <import resource="spring-mybatis.xml"/>
    <import resource="spring-api.xml"/>
</beans>